<div>
	<h2>
		Edit profile
	</h2>
	<div class='row' style='text-align:center;'>
		<div class='col-md-6'>
			<img src="<%- user.profilePicLarge %>" class='profile-pic' />
		</div>
		<div class='col-md-6'>
			<% if(user.team == 'astu'){%>
				<img src="/images/astu_logo_ph.png" class='profile-pic' />
			<% } %>
			<% if(user.team == 'blackdragon'){%>
				<img src="/images/bdp-image_ph.png" class='profile-pic' />
			<% } %>
			<% if(user.team == 'sorcesec'){%>
				<img src="/images/mjd_tree_ph.png" class='profile-pic' />
			<% } %>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-12'>
			<fieldset class='margin-top'>
		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='new-pass'>
		            	New password</label>
		            <div class="col-md-9">
		                <input type='password' id='new-pass' class='form-control'/>
		            </div>
		        </div>

		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='conf-pass'>
		            	Confirm password</label>
		            <div class="col-md-9">
		                <input type='password' id='conf-pass' class='form-control'/>
		            </div>
		        </div>

		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='email'>
		            	Email*
		            </label>
		            <div class="col-md-9">
		                <input type='text' id='email' class='form-control' 
		                value='<%- user.email %>'/>
		            </div>
		        </div>

		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='location'>
		            	Location
		            </label>
		            <div class="col-md-9">
		                <input type='text' id='location' class='form-control' 
		                value='<%- user.location || "" %>'/>
		            </div>
		        </div>

		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='pic'>
		            	Avatar
		            </label>
		            <div class="col-md-9">
		                <input type='text' id='pic' class='form-control' 
		                value='<%- user.profilePicLarge %>'/>
		            </div>
		        </div>

		        <div class="form-group row">
		            <label class="col-md-3 control-label ch-label" for='sign'>
		            	Signature
		            </label>
		            <div class="col-md-9">
		                <textarea id='sign' class='form-control'></textarea>
		            </div>
		        </div>

		        <div class="form-group row">
		            <div class="col-md-6 center">
		            	<button class='btn btn-primary'>Save</button>
		            </div>
		            <div class="col-md-6 center">
		                <button class='btn btn-danger'>Cancel</button>
		            </div>
		        </div>
		        
		    </fieldset>
	    </div>
	</div>	
</div>